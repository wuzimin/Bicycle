<Page x:ConnectionId='1'
    x:Class="Bicycle.Buy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bicycle"
    xmlns:md="using:Bicycle.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='2' x:Name="home" Icon="Home" Label="首页"                    />
            <AppBarButton x:ConnectionId='3' Icon="Contact" Label="个人中心"                       />
        </CommandBar>
    </Page.BottomAppBar>
    <!--<UserControl.Resources>
        <con:BoolIntConverter x:Key="BooltoInt"></con:BoolIntConverter>
    </UserControl.Resources>-->

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/bike7.jpg" />
        </Grid.Background>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='4' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='5' x:Name="VisualStateMin0">
                    <VisualState.Setters>
                        <Setter Target="mainpage2.(UIElement.Visibility)" Value="Collapsed"/>
                        <Setter Target="mainpage1.(Grid.ColumnSpan)" Value="2"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='6' x:Name="VisualStateMin800">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='7' x:Name="user" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="150" FontSize="30" FontWeight="Bold" Grid.Row="0"/>
        <TextBlock x:ConnectionId='8' x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="     车市" VerticalAlignment="Top" Margin="0,20,0,20" Height="40" Width="150" FontSize="30" FontWeight="Bold" Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ListView x:ConnectionId='9'  x:Name="mainpage1" IsItemClickEnabled="True"                         
                                                               >
                <ListView.ItemTemplate>
                    <DataTemplate                         >
                        <UserControl x:ConnectionId='23'>
                            <Grid Height="150">

                                <!--<VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>
                                        <VisualState x:Name="ListStateMin0">
                                            <VisualState.Setters>
                                                <Setter Target="img.Visibility" Value="Collapsed"/>
                                            </VisualState.Setters>
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="1"/>
                                            </VisualState.StateTriggers>
                                        </VisualState>
                                        <VisualState x:Name="ListStateMin600">
                                            <VisualState.StateTriggers>
                                                <AdaptiveTrigger MinWindowWidth="600"/>
                                            </VisualState.StateTriggers>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>-->

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image x:ConnectionId='24' x:Name="img" Grid.Column="0"                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10,10,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock x:ConnectionId='25' Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap"                       VerticalAlignment="Center" Foreground="Black" FontWeight="Normal" FontSize="20" LineHeight="20" RenderTransformOrigin="0.5,0.5"/>
                                    <RelativePanel Width="350" Margin="0,24,0,0">
                                        <TextBlock Text="车龄"/>
                                        <TextBlock x:ConnectionId='27' Width="250"                     Name="age" RelativePanel.AlignRightWithPanel="True"/>
                                    </RelativePanel>
                                    <RelativePanel Width="350" Margin="0,24,0,0">
                                        <TextBlock Text="价格"/>
                                        <TextBlock x:ConnectionId='26' Width="250"                       Name="price" RelativePanel.AlignRightWithPanel="True"/>
                                    </RelativePanel>
                                </StackPanel>
                            </Grid>
                        </UserControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid x:ConnectionId='10' x:Name="mainpage2" Grid.Column="1">
                <ScrollViewer Margin="20">
                    <StackPanel x:ConnectionId='11' x:Name="info">
                        <Image x:ConnectionId='12' x:Name="image" Source="Assets/dabai.jpg" Width="250" Height="250" RenderTransformOrigin="0.5,0.1">
                            <Image.RenderTransform>
                                <CompositeTransform ScaleX="{Binding Value, ElementName=MySlider}"
                                        ScaleY="{Binding Value, ElementName=MySlider}"/>
                            </Image.RenderTransform>
                        </Image>
                            <Slider x:ConnectionId='13' Padding="30,0,30,0" Minimum="0.5" Maximum="1.0" StepFrequency="0.1" x:Name="MySlider"/>

                        <ListView x:ConnectionId='14'  x:Name="bicycleinfo">
                            <RelativePanel Width="350" Margin="0,24,0,0">
                            <TextBlock Text="类型"/>
                            <TextBlock x:ConnectionId='22' Width="250" Height="80" Text="" Name="title" RelativePanel.AlignRightWithPanel="True"/>
                        </RelativePanel>
                        <RelativePanel Width="350" Margin="0,24,0,0">
                            <TextBlock Text="车龄"/>
                            <TextBlock x:ConnectionId='21' Width="250" Height="80" Text="" Name="age" RelativePanel.AlignRightWithPanel="True"/>
                        </RelativePanel>
                        <RelativePanel Width="350" Margin="0,24,0,0">
                            <TextBlock Text="价格"/>
                            <TextBlock x:ConnectionId='20' Width="250" Height="80" Text="" Name="price" RelativePanel.AlignRightWithPanel="True"/>
                        </RelativePanel>
                        <RelativePanel Width="350" Margin="0,24,0,0">
                            <TextBlock Text="联系方式"/>
                            <TextBlock x:ConnectionId='19' Width="250" Height="80" Text="" Name="phonenumber" RelativePanel.AlignRightWithPanel="True"/>
                        </RelativePanel>
                        <RelativePanel Width="350" Margin="0,24,0,0">
                            <TextBlock Text="学校"/>
                            <TextBlock x:ConnectionId='18' Width="250" Height="80" Text="" Name="school" RelativePanel.AlignRightWithPanel="True"/>
                        </RelativePanel>
                        <RelativePanel Width="350" Margin="0,24,0,0">
                            <TextBlock Text="备注"/>
                            <TextBlock x:ConnectionId='17' Width="250" Height="80" Text="" Name="description" RelativePanel.AlignRightWithPanel="True"/>
                        </RelativePanel>
                        <RelativePanel Width="350" Margin="0,24,0,0">
                            <AppBarButton x:ConnectionId='15' x:Name="Favorite" Icon="Favorite" Label="收藏"                         HorizontalAlignment="Right" Margin="0 0 100 0"/>
                            <AppBarButton x:ConnectionId='16' x:Name="share" Icon="Mail" Label="分享"                      HorizontalAlignment="Right" Margin="0 0 100 0" RelativePanel.AlignRightWithPanel="True"/>
                        </RelativePanel>
                        </ListView>


                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

    </Grid>
</Page>

